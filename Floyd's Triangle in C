#include <stdio.h>

int main() 
{
    int row;
    int c = 1;
    printf ("Enter the no. of rows : ");
    scanf ("%d", &row);
    
    for (int i=1; i<=row; i++)
    {
        for (int j=1; j<=i; j++)
        {
            printf ("%d   ", c);
            c++;
        }
        printf ("\n\n");
    }
    return 0;
}
