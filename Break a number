class Solution{
    int waysToBreakNumber(int N){
        int s=0;
        for (int i=0; i<=N; i++) {
            for (int j=0; j<=N; j++) {
                for(int k=0; k<=N; k++) {
                    if (i+j+k == N) {
                        s++;
                    }
                }
            }
        }
        return s;
    }
}
